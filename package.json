{
  "name": "todo-finder",
  "version": "1.0.0",
  "bin": "dist/index.js",
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsc -p . -d && npx pkg . -t node14-linux-x64,node14-macos-x64,node14-win-x64 -o bin/find-todos",
    "watch": "tsc -w",
    "test": "jest src",
    "clean": "rm -rf bin dist"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "pkg": "^4.5.1",
    "ts-jest": "^26.5.4"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "newline-before-return": 2,
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ]
}
